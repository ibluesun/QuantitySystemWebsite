<script src="~/Scripts/jquery.terminal-min.js"></script>
<link href="~/Content/jquery.terminal.css" rel="stylesheet" />


<script>
    var copyright = "\
Quantity System Framework  ver 1.3.3\n\
Quantity System DLR        ver 1.2.984\n\
Symbolic Algebra Library   ver 0.8.975\n\
Copyright (c) 2008 - 2015 at Lost Particles Network by Ahmed Sadek\n\
