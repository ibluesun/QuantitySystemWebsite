@{
    ViewBag.Title = "Quantities";

    var quantities = QsWeb.Quantities();
}


<div class="jumbotron">
    <h3>Available Quantities [@quantities.Count()]</h3>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Quantity</td>
                    <td>Dimension</td>
                    <td>SI Unit</td>
                </tr>
            </thead>
            @for (int ix = 0; ix < quantities.Length; ix++)
            {
                var v = quantities[ix];
                <tr>
                    <td>@ix</td>
                    <td><a href="~/Quantities/@v.Name">@v.Name</a></td>
                    <td>@v.Dimension</td>
                    <td>@v.Unit</td>
                </tr>
            }
        </table>
    </div>
</div>



